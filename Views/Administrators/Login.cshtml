@model StudentFinanceSupport.Models.AdministratorLogin

@{
    ViewBag.Title = "Administration Login";
    Layout = "~/Views/Shared/_Login_Layout_.cshtml";
}


<div class="container">
    <div class="row">
       
        <div class="col-md-4 col-md-offset-4">
            <div class="login-panel panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title">Please Sign In</h3>
                </div>
                
                <div class="panel-body">
                   @using (Html.BeginForm())
                    {
                        
                        <fieldset>
                            <div class="form-group">
                                @Html.TextBoxFor(u => u.Email, new { @class = "form-control" , @placeholder="E-mail" , @type="email" , @autofocus =""})
                                
                            </div>
                            <div class="form-group">
                                @Html.PasswordFor(u => u.Password, new { @class = "form-control" })
                            </div>
                            <div class="checkbox">
                                <label>
                                    <input name="remember" type="checkbox" value="Remember Me">Remember Me
                                </label>
                            </div>
                            <input type="submit" class="btn btn-lg btn-success btn-block" value="Log In" />
                        </fieldset>
                       
                   }
                </div>

                <span class="pull-right">@Html.ActionLink("Forgotten Password?", "Index", "Recovery")</span>
                
                
            </div>
            
            <!--display any errors as alert boxes-->
            @if (ViewData.ModelState.Any(x => x.Value.Errors.Any()))
            {
                <div class="alert alert-danger">
                    <a href="#" class="close" data-dismiss="alert">×</a>
                    <h4>Validation Errors</h4>
                    @Html.ValidationSummary()
                </div>
            }
        </div>
    </div>
</div>



