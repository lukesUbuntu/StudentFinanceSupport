@model IEnumerable<StudentFinanceSupport.Models.Courses>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Main_Layout_.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
@Styles.Render("~/Content/datatables")
@Scripts.Render("~/bundles/datatables")
<table class="table table-striped table-bordered table-hover col-md-8" id="faculty-list-table">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.course_name)</th>
            <th class="col-lg-3">@Html.DisplayNameFor(model => model.Faculty.faculty_name)</th>
            
            <th class="col-lg-2"></th>
        </tr>
    </thead>
    <tbody>


        @foreach (var course in Model)
        {
            <tr class="odd gradeX">
                <td>
                    @Html.DisplayFor(modelItem => course.course_name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => course.Faculty.faculty_name)
                </td>
               
                <td class="center">
                    <div class="btn-group">
                        @Html.ActionLink("Edit", "Edit", "Courses",
                     new { id = course.id_courses },
                            htmlAttributes: new { @class = "btn btn-success " }
                          )

                       
                    </div>

                </td>

            </tr>
        }

    </tbody>
</table>

<script>
    $(document).ready(function () {
        $('#faculty-list-table').DataTable({
            responsive: true
        });

       
    });
</script>


