@model IEnumerable<StudentFinanceSupport.Models.Faculty>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Main_Layout_.cshtml";
}

<p>
    @Html.ActionLink("Create New", "Create")
</p>

<h2>Courses</h2>

@Styles.Render("~/Content/datatables")
@Scripts.Render("~/bundles/datatables")
<table class="table table-striped table-bordered table-hover col-md-8" id="faculty-list-table">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.faculty_name)</th>
            <th class="col-lg-3"></th>
        </tr>
    </thead>
    <tbody>


        @foreach (var faculty in Model)
        {
            <tr class="odd gradeX">
                <td>
                @Html.DisplayFor(modelItem => faculty.faculty_name)
                </td>
              
                <td class="center">
                    <div class="btn-group">
                        @Html.ActionLink("Add Course", "Create", "Courses",
                            new { id = faculty.id_faculty },
                            htmlAttributes: new { @class = "btn btn-default " }
                          )

                        <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown" aria-expanded="false">
                            <span class="caret"></span>
                            <span class="sr-only"></span>
                        </button>
                        <ul class="dropdown-menu" role="menu">
                            <li>@Html.ActionLink("Edit Faculty", "Edit", new { id = faculty.id_faculty })</li>
                           
                            <li class="divider"></li>
                            <li class=""> @Html.ActionLink("Delete", "Delete", new { id = faculty.id_faculty })</li>
                        </ul>
                    </div>

                </td>

            </tr>
        }

    </tbody>
</table>

<script>
    $(document).ready(function () {
        $('#faculty-list-table').DataTable({
            responsive: true
        });
    });
</script>



