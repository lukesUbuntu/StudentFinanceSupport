@model IEnumerable<StudentFinanceSupport.Models.StudentVoucher>


<table class="table table-striped table-bordered table-hover" id="voucher-report-table">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.DateOfIssue)</th>
            <th>@Html.DisplayNameFor(model => model.StudentRegistration.FirstName)</th>
            <th>@Html.DisplayNameFor(model => model.StudentRegistration.LastName)</th>
            <th>@Html.DisplayNameFor(model => model.GrantType)</th>
            <th>@Html.DisplayNameFor(model => model.StudentRegistration.Faculty.faculty_name)</th>
            <th></th>
        </tr>
    </thead>
    <tbody>


        @foreach (var student in Model)
        {
            <tr class="odd gradeX">
                <td>@Html.DisplayFor(modelItem => student.DateOfIssue)</td>
                <td>@Html.DisplayFor(modelItem => student.StudentRegistration.FirstName)</td>
                <td>@Html.DisplayFor(modelItem => student.StudentRegistration.LastName)</td>
                <td>@Html.DisplayFor(modelItem => student.GrantType)</td>
                <td>@Html.DisplayFor(modelItem => student.StudentRegistration.Faculty.faculty_name)</td>
                <td class="center">
                    <div class="btn-group">
                        @Html.ActionLink("Edit Grant", "Edit", "StudentVouchers",
                     new { id = student.id_student_vouchers },
                            htmlAttributes: new { @class = "btn btn-default " }
                          )

                        <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown" aria-expanded="false">
                            <span class="caret"></span>
                            <span class="sr-only"></span>
                        </button>
                        <ul class="dropdown-menu" role="menu">
                            <li>@Html.ActionLink("View Details", "Edit", new { id = student.id_student_vouchers })</li>
                            <li><a href="#">Another action</a></li>
                            <li class="divider"></li>
                            <li class="">@Html.ActionLink("Delete", "Delete", new { /* id=item.PrimaryKey */ })</li>
                        </ul>
                    </div>

                </td>

            </tr>
        }

    </tbody>
</table>


<script>
    $(document).ready(function () {
        $('#voucher-report-table').DataTable({
            responsive: true
        });
    });
</script>