@model IEnumerable<StudentFinanceSupport.Models.StudentVoucher>


<table class="table table-striped table-bordered table-hover" id="voucher-report-table">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.DateOfIssue)</th>
            <th>@Html.DisplayNameFor(model => model.StudentRegistration.FirstName)</th>
            
            
            <th>@Html.DisplayNameFor(model => model.StudentRegistration.Campus.campus_name)</th>
            <th>@Html.DisplayNameFor(model => model.GrantType.grant_name)</th>
            <th>@Html.DisplayNameFor(model => model.GrantValue)</th>
            <th></th>
        </tr>
    </thead>
    <tbody>


        @foreach (var student in Model)
        {
            <tr class="odd gradeX">
                <td>@Html.DisplayFor(modelItem => student.DateOfIssue)</td>
                <td>
                @Html.DisplayFor(modelItem => student.StudentRegistration.FirstName)
                @Html.DisplayFor(modelItem => student.StudentRegistration.LastName)
                </td>
               
                
                <td>@Html.DisplayFor(modelItem => student.StudentRegistration.Campus.campus_name)</td>
                <td>@Html.DisplayFor(modelItem => student.GrantType.grant_name)</td>
                <td>$@Html.DisplayFor(modelItem => student.GrantValue)</td>
                <td class="center">
                    
                        @Html.ActionLink("Edit Grant", "Edit", "StudentVouchers",
                     new { id = student.id_student_vouchers },
                            htmlAttributes: new { @class = "btn btn-default " }
                          )



                </td>

            </tr>
        }

    </tbody>
</table>


<script>
    $(document).ready(function () {
        $('#voucher-report-table').DataTable({
            responsive: true
        });
    });
</script>